<p id="notice"><%= notice %></p>

<h1>Quotes</h1>

<table class="w3-table-all w3-centered w3-hoverable w3-large w3-amber">
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @typos.each do |typo| %>
      <tr>
        <td><%= typo.name %></td>
        <td><%= typo.stuff %></td>
        <td><%= link_to 'Show', typo , class:"w3-button w3-round w3-blue" %></td>
        <td><%= link_to 'Edit', edit_typo_path(typo) , class:"w3-button w3-round w3-blue" %></td>
        <td><%= link_to 'Destroy', typo, method: :delete, data: { confirm: 'Are you sure?' } , class:"w3-button w3-round w3-blue" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Typo', new_typo_path , class:"w3-button w3-round w3-blue" %>
